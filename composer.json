{
    "name": "kcs/serializer",
    "type": "library",
    "description": "Library for (de-)serializing data of any complexity; supports XML, JSON, and YAML.",
    "keywords": ["serialization", "deserialization", "json", "yaml", "xml"],
    "license": "Apache2",
    "authors": [
        {
            "name": "Alessandro Chitolina",
            "email": "alekitto@gmail.com"
        },
        {
            "name": "Johannes M. Schmitt",
            "email": "schmittjoh@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "doctrine/common": "^2.0",
        "doctrine/instantiator": "~1.0.3",
        "doctrine/lexer": "^1.0.1",
        "kcs/metadata": "^1.3|^2.0"
    },
    "conflict": {
        "twig/twig": "<1.12",
        "doctrine/phpcr-odm": "<1.1.4"
    },
    "suggest": {
        "symfony/event-dispatcher": "Dispatch pre/post serialize events",
        "symfony/yaml": "Required if you'd like to serialize data to YAML format."
    },
    "require-dev": {
        "doctrine/annotations": "^1.0",
        "doctrine/cache": "~1.4",
        "doctrine/orm": "~2.3",
        "doctrine/phpcr-odm": "~1.0",
        "jackalope/jackalope-doctrine-dbal": "^1.0",
        "phpcollection/phpcollection": "^0.4.0",
        "phpunit/phpunit": "^5.7",
        "propel/propel1": "~1.7",
        "symfony/console": "^2.3|^3.0",
        "symfony/event-dispatcher": "^2.3|^3.0",
        "symfony/filesystem": "^2.1|^3.0",
        "symfony/form": "^2.3.4|^3.0",
        "symfony/translation": "^2.0.5|^3.0",
        "symfony/validator": "^2.2|^3.0",
        "symfony/yaml": "^2.6|^3.0",
        "twig/twig": "~1.12|~2.0"
    },
    "autoload": {
        "psr-4": {
            "Kcs\\Serializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kcs\\Serializer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
